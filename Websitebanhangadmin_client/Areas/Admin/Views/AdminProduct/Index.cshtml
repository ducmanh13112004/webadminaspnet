@model IEnumerable<Websitebanhangadmin_client.Models.Product>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
                <a href="@Url.Action("Add", "AdminProduct")"><i class="fa fa-table fa-fw"></i>Product Add </a>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Product
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Product Image</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Price</td>
                                            <td>@product.Description</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px;" />
                                                }
                                                else
                                                {
                                                    <p>No image available.</p>
                                                }
                                            </td>
                                            <td>@product.Category?.Name</td>
                                            <td>
                                                <a href="/Admin/AdminProduct/Display/@product.Id">View</a> |
                                                <a href="/Admin/AdminProduct/Update/@product.Id">Edit</a> |
                                                <a href="/Admin/AdminProduct/Delete/@product.Id">Delete</a>
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                     
                       
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
