@model Websitebanhangadmin_client.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <!-- Sử dụng container để căn giữa -->
    <h2 class="text-center">Delete Product</h2> <!-- Căn giữa tiêu đề -->

    <div class="text-center">
        <!-- Căn giữa toàn bộ nội dung -->
        <h4>Are you sure you want to delete this product?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Name</dt> <!-- Cách lề trái -->
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Model.Price</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
