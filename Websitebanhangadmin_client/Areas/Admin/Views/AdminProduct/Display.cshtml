@model Websitebanhangadmin_client.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div id="page-wrapper" class="container mt-5">
   
    <div class="row justify-content-center">
        <div class="col-md-6 p-5 border border-dark" style="padding: 2rem; border: 1px solid black; text-align: left;margin-left: 300px; ;justify-content: center;; margin-top: 80px">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="card-title mb-0">@Model.Name</h2>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid img-thumbnail mb-3" style="max-width: 300px;" />
                    }
                    else
                    {
                        <p class="text-muted">No image available.</p>
                    }
                    <h3 class="text-success">Price: @Model.Price</h3>
                    <p>Description: @Model.Description</p>
                </div>
                
            </div>
           
        </div>
        
    </div>
    <div class="card-footer text-center" style="margin-right: 1000px;">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="fa fa-home fa-fw"></i> Back to List
        </a>
    </div>

</div>

